##############################
# General Service Settings
##############################

# Port the auth-service listens on inside the container
PORT=3001

# Environment mode
NODE_ENV=development   # or "production" in Code Engine


##############################
# Authentication / Security
##############################

# JWT secret key for signing authentication tokens
JWT_SECRET=your_jwt_secret_here


##############################
# Email / SMTP Configuration
##############################

# Email provider configuration for nodemailer
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Email account used to send verification/reset messages
EMAIL_USER=your_email_here@gmail.com
EMAIL_PASS=your_email_app_password_here

# URL of the UI / Frontend used for email verification links
FRONTEND_URL=http://localhost:3000


##############################
# Database Configuration
# (Optional â€” for future Postgres integration)
##############################

DB_HOST=localhost
DB_PORT=5432
DB_NAME=musicconnect
DB_USER=musiconnect_app
DB_PASSWORD=your_db_password_here
